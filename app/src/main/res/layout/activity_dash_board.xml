<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Top bar -->
        <RelativeLayout
            android:id="@+id/relativeTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/teachers_regular"
                        android:text="Divyaangadisha"
                        android:textColor="@color/gray"
                        android:singleLine="true"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/txtWish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/teachers_medium"
                        android:text="Good Morning"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:background="@drawable/round_circle_white">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgNotification"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/notifications_ic"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:background="@drawable/round_circle_white">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgWhatsapp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/whatsapp_ic"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:background="@drawable/round_circle_white">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgChat"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/chat_ic"
                            app:tint="@color/black" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Main Frame -->
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeTop"
            android:layout_marginBottom="70dp"
            android:background="@color/white" />

        <!-- Bottom Smooth Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="35dp"
            app:cardElevation="8dp">
            <me.ibrahimsn.lib.SmoothBottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:backgroundColor="@color/colorPrimary"
                app:iconSize="14dp"
                app:indicatorColor="@color/colorIndicator"
                app:itemIconTint="@color/bottom_bg"
                app:itemTextColor="@color/bottom_bg"
                app:menu="@menu/menu_bottom"
                app:textSize="8sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>
