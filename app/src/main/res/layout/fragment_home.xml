<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerBanners"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:paddingTop="5dp"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"/>

                <com.denzcoskun.imageslider.ImageSlider
                    android:visibility="gone"
                    android:id="@+id/imageSlider"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:paddingTop="5dp"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="18"
                    app:iss_delay="2000"
                    app:iss_indicator_align="BOTTOM"
                    app:iss_period="2000"
                    app:iss_text_color="@color/black"
                    app:iss_title_background="@color/trance" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="25dp"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/lightGray"
                        android:layout_marginStart="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/txtJobTitle"/>
                    <TextView
                        android:id="@+id/txtJobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/teachers_semibold"
                        android:text="Job Alerts"
                        android:textColor="@color/gray"
                        android:textSize="17dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/lightGray"
                        android:layout_marginEnd="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/txtJobTitle"/>
                </RelativeLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/recyclerviewjobAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>